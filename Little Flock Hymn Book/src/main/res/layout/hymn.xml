<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:id="@+id/hymnNumberView" android:layout_weight="1" android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="30sp" android:layout_height="wrap_content" android:text=""
		android:layout_marginLeft="10dip" android:layout_marginTop="5dip" android:typeface="serif" android:textColor="#DDDDDD" android:layout_width="wrap_content"/>
		<TextView android:id="@+id/hymnMeterView" android:layout_weight="1" android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="30sp" android:layout_height="wrap_content" android:text=""
		android:layout_marginLeft="10dip" android:layout_marginTop="5dip" android:typeface="serif" android:textColor="#DDDDDD" android:layout_width="wrap_content"/>

		<ImageButton
		    android:id="@+id/btnMenu"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:contentDescription="Menu"
		    android:background="@null"
		    android:src="@drawable/ic_menu_moreoverflow_normal_holo_light" />

</LinearLayout>
	<WebView android:id="@+id/web"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:keepScreenOn="true" />
</LinearLayout>
